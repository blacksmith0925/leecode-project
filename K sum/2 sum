#include <stdio.h>
#include <malloc.h>

/*这种方法基于数组有序的情况下。，若数组无序，则需要先进行排序，排序的时间复杂度是O（nlogn） 。 
使用首尾两个指针进行搜索，时间复杂度是O（n），所以总的时间复杂度是O（nlogn）*/

int* twoSum(int* nums, int numsSize, int target) {
	int *pa = &nums[0];
	int *pb = &nums[numsSize-1];
	int *result = (int*)malloc(sizeof(int));
	int a[2];
	int sum;
	while(*pa < *pb){
	    sum = *pa + *pb;
	    printf("%d\n",sum);
	    if(sum == target){
	        a[0] = *pa;
	        a[1] = *pb;
	        break;
	    }
	    else if(sum<target){
	        pa++;
	    }
	    else{
    		pb--;
    	}
	}
	result = a;
	return result;   
}

int main(){
	int nums[4] ={2,7,11,15};
	int target =9,numsSize = 4;
	int *a;
	a = twoSum(nums,numsSize,target);
	printf("%d %d",a[0],a[1]);
	free(a);
	return 0;
}
